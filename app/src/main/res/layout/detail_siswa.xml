<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@android:id/content"
    android:padding="20dp">

    <com.vickykdv.circlerectimageview.CircleRectImage
        android:id="@+id/tmp_image"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:border_color="@android:color/transparent"
        app:border_width="10"
        app:roundAll="500" />

    <TextView
        android:id="@+id/tmp_nama"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tmp_image"
        android:text="fsdf"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tmp_tgl_lahir"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tmp_nama"
        android:layout_toRightOf="@+id/tmp_image"
        android:text="fsdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tmp_jenkel"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tmp_tgl_lahir"
        android:layout_toRightOf="@+id/tmp_image"
        android:text="fsdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tmp_alamat"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tmp_jenkel"
        android:layout_toRightOf="@+id/tmp_image"
        android:text="fsdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>