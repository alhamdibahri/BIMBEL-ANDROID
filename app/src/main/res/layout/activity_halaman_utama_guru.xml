<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/home"
    android:orientation="horizontal"
    tools:context=".HalamanUtamaGuru">


    <LinearLayout
        android:translationX="-280dp"
        android:id="@+id/mainmenu"
        android:orientation="vertical"
        android:background="@color/cyan"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userbg"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/namaa"
            android:text=""
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pr"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bgbtnmenu"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/ic_person_pin_black_24dp"
            android:text=" Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/msg"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bgbtnmenu"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/ic_chat_black_24dp"
            android:text=" Chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/history"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bgbtnmenu"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:text=" History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/settings"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bgbtnmenu"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:text=" Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/so"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bgbtnmenu"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="18sp"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/exit"
            android:textAllCaps="false"
            android:text=" Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:translationX="-290dp"
        android:id="@+id/maincontent"
        android:layout_width="416dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/bgprof"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <Button
                android:translationX="10dp"
                android:id="@+id/btnmenu"
                android:background="@drawable/menu"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_marginTop="152dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Bimbingan Online"
            android:layout_marginStart="44dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/menu"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_marginTop="190dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="34dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_dGuru"
                    android:background="@drawable/bgbtnmenu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guru"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="255dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginBottom="304dp"
                    android:text="Guru"
                    android:textColor="@color/menu"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_dSiswa"
                    android:background="@drawable/bgbtnmenu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/siswa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="255dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginBottom="304dp"
                    android:text="Siswa"
                    android:textColor="@color/menu"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnMateri"
                    android:background="@drawable/bgbtnmenu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="255dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginBottom="304dp"
                    android:text="Materi"
                    android:textColor="@color/menu"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btn_dBerita"
                    android:background="@drawable/bgbtnmenu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="255dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginBottom="304dp"
                    android:text="Berita"
                    android:textColor="@color/menu"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>