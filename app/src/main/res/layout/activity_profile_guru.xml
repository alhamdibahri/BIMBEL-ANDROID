<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileGuru">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:background="@drawable/grad"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePGuru"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/placeholder"/>

            <TextView
                android:layout_alignBottom="@+id/imagePGuru"
                android:layout_alignRight="@+id/imagePGuru"
                android:layout_alignLeft="@+id/imagePGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:clickable="false"
                android:gravity="center"
                android:text="Tekan untuk ubah"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="32sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlayly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rellay1">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linlayly1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Nama Lengkap"/>


                        <EditText
                            android:id="@+id/namaguru"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_text_radius"
                            android:drawableLeft="@drawable/name"
                            android:hint="Nama Lengkap"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:cursorVisible="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Tanggal Lahir"/>

                        <Button
                            android:id="@+id/tglguru"
                            android:drawableLeft="@drawable/ic_date_range_black_24dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="10dp"
                            android:text="Atur Sekarang"
                            android:background="@drawable/edit_text_radius"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Jenis Kelamin"/>

                    <Button
                        android:id="@+id/jk"
                        android:drawableLeft="@drawable/ic_face_black_24dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="10dp"
                        android:text="Atur Sekarang"
                        android:background="@drawable/edit_text_radius"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Agama"/>

                    <Button
                        android:id="@+id/agama"
                        android:drawableLeft="@drawable/ic_group_work_black_24dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="10dp"
                        android:text="Atur Sekarang"
                        android:background="@drawable/edit_text_radius"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Alamat"/>

                        <EditText
                            android:id="@+id/alamatguru"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_text_radius"
                            android:drawableLeft="@drawable/ic_map_black_24dp"
                            android:hint="Alamat"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:textCursorDrawable="@null"
                            android:cursorVisible="true"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Handphone"/>

                        <EditText
                            android:id="@+id/hpguru"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_text_radius"
                            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                            android:hint="Handphone"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:cursorVisible="true"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Kategori Kelas"/>

                    <Spinner
                        android:id="@+id/kelasguru"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:spinnerMode="dropdown"
                        style="@style/spinnerItemStyle"
                        android:popupBackground="@color/WhiteSmoke" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:text="Mata Pelajaran"/>

                    <Spinner
                        android:id="@+id/pelajaranguru"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:spinnerMode="dropdown"
                        style="@style/spinnerItemStyle"
                        android:popupBackground="@color/WhiteSmoke" />

                </LinearLayout>
                <Button
                    android:id="@+id/simpanpguru"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_login"
                    android:text="SIMPAN"
                    android:textSize="20dp" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>