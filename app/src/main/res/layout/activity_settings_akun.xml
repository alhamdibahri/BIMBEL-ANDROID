<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SettingsAkun">

    <TextView
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/materialUsernameSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:errorEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/sUsername"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_radius"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="Username"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/materialEmailSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorTextAppearance="@style/error_appearance"
        android:layout_marginTop="5dp"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/sEmail"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_radius"
            android:drawableLeft="@drawable/email"
            android:hint="Email"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:text="Password Baru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/materialPasswordSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:errorEnabled="true"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/sPasswordBaru"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_radius"
            android:drawableStart="@drawable/password"
            android:hint="Password Baru"
            android:layout_width="350dp"
            android:inputType="textPassword"
            android:layout_height="45dp"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnUbahSetting"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:cursorVisible="true"
        android:text="Ubah"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

</LinearLayout>